{
  "manifest_version": 2,
  "version": "1.0.2",
  "name": "Epoch Light",
  "description": "A minimalist, high-clarity theme for focused engineering. Part of the Epoch Suite by TheCSJourney.",
  "author": "Sumit Nautiyal",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "epoch-light@thecsjourney.com",
      "strict_min_version": "103.0"
    }
  },
  "theme": {
    "properties": {
      "color_scheme": "light"
    },
    "colors": {
      "frame": "#E0E2E5", 
      "tab_background_text": "#444746",
      "toolbar": "#FFFFFF",
      "toolbar_text": "#1F1F1F",
      "toolbar_field": "#F1F3F4",
      "toolbar_field_text": "#1F1F1F",
      "tab_line": "transparent",
      "tab_loading": "#0B57D0",
      "tab_selected": "#FFFFFF",
      "tab_background_separator": "#E0E2E5",
      "icons": "#444746",
      "popup": "#FFFFFF",
      "popup_text": "#1F1F1F",
      "popup_border": "#E0E2E5",
      "sidebar": "#FFFFFF",
      "sidebar_text": "#1F1F1F",
      "sidebar_border": "#E0E2E5"
    }
  }
}